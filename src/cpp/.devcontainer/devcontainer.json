{
	"build": {
		"dockerfile": "./Dockerfile",
		"context": "."
	},

	"features": {
		"ghcr.io/devcontainers/features/git:1": {
            "version": "latest",
            "ppa": "false"
        }
    },

	"capAdd": ["SYS_PTRACE"],
	"securityOpt": ["seccomp=unconfined"],
	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				// HB:
				"eamodio.gitlens"
				,"fabiospampinato.vscode-diff"
				,"github.vscode-pull-request-github"
				,"ms-azuretools.vscode-docker"
				,"ms-vscode.cmake-tools"
				,"ms-vscode.cpptools"
				,"ms-vscode.cpptools-extension-pack"
				,"ms-vscode.cpptools-themes"
				,"ms-vscode.makefile-tools"
			]
		}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "gcc -v",

	// Set `remoteUser` to `root` to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode"

    // HB:
	,"name": "cpp kernel devcontainers/microsoft"
    ,"runArgs": [
		"--net", "host"
		,"-e", "DISPLAY=${env:DISPLAY}"
		,"-v", "/tmp/.X11-unix:/tmp/.X11-unix"
        ,"-v", "/dev/dri:/dev/dri"
	]
    ,"mounts": [
        // "source=${localEnv:USERPROFILE},target=/mnt/${localEnv:USER},type=bind,consistency=cached"		// Windows
        "source=${localEnv:HOME},target=/mnt/${localEnv:USER},type=bind,consistency=cached"					// Linux
    ]
}